version: "1.0"

services:
  postgres:
    image: postgres:latest
    env_file:
      - ./.env
    restart: unless-stopped
    volumes:
      - data:/var/lib/postgresql/data
    ports:
      - 5432:5432
    networks:
      - backend

  backend:
    build:
      dockerfile: ./backend/Dockerfile
    ports:
      - 3000:3000
    networks:
      - backend
    volumes:
      - ./backend:/app
    env_file:
      - ./docker/backend.env
    restart: unless-stopped
    depends_on:
      - postgres

  frontend:
    build:
      dockerfile: ./frontend/Dockerfile
    ports:
      - 8080:8080
    networks:
      - backend
    volumes:
      - ./frontend:/app
    env_file:
      - ./docker/frontend.env
    restart: unless-stopped
    depends_on:
      - backend

volumes:
  data:

networks:
  backend:
